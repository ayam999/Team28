pipeline {
    agent {
        docker {
            image 'adoptopenjdk:8-jdk'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
                sh 'mvn install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
                sh 'mvn compile test install'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
